        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#424242</item>          <!-- dark gray text -->
        <item name="backgroundTint">#E0E0E0</item>             <!-- light gray fill -->
        <item name="rippleColor">#BDBDBD</item>                <!-- subtle ripple -->
        <item name="cornerRadius">2dp</item>                   <!-- square-ish corners -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">1dp</item>                      <!-- small raised look -->
        <item name="strokeColor">#C7C7C7</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
